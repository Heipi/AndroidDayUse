<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/bar_left_icon"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:padding="13dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bar_left_tv"
        style="@style/DefineTextViewStyleGray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_padding_4"
        android:paddingRight="@dimen/margin_padding_4"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bar_center_tv"
        style="@style/DefineTextViewStyleGray"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxWidth="224dp"
        android:textSize="@dimen/dp_25" />

    <ImageView
        android:id="@+id/bar_right_icon"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_padding_12"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bar_right_tv"
        style="@style/DefineTextViewStyleGray"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_padding_4"
        android:paddingRight="@dimen/margin_padding_4"
        android:textColor="@android:color/white"
        android:visibility="gone" />
</RelativeLayout>